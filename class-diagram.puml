}

enum Builder{
    FENDER
    MARTIN
    GIBSON
    COLLINGS
    OLSON
    RYAN
    PRS
    ANY
}

enum Wood{
    ALDER
    ADIRONDACK
    BRAZILIAN_ROSEWOOD
    CEDAR
    COCOBOLO
    INDIAN_ROSEWOOD
    MAHOGANY
    MAPLE
    SITKA
}

enum Type{
    ELECTRIC
    ACOUSTIC
}

interface Database{
    +SaveChanges()
    +LoadDatabase()
    +Set<Type>()
}

