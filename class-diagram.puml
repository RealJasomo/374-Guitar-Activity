interface Repository{
    +Add(Entity)
    +AddRange(EntityList)
    +Remove(Entity)
    +findById(Id)
    +findByKey(KeySelector, Key)
}
class GuitarRepository{

}

class GuitarController{
    +Search(GuitarSpec)
    +Add(User, Guitar)
